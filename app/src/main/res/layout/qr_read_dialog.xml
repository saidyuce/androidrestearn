<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qrRL"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/qreadimage"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="60dp"
            android:id="@+id/confettiView2"
            android:layout_alignParentRight="true" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/linearLayout3"
            android:id="@+id/confettiView"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="60dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoş geldiniz!"
            android:id="@+id/textView36"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textIsSelectable="false"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="15dp"
            android:textColor="#fff"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:max="360"
            android:progress="0"
            android:progressDrawable="@drawable/circularmid"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView36"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/dereceTextView"
            android:textSize="42sp"
            android:textColor="#fff"
            android:layout_alignTop="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="100"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QR kod okutarak\n +10 puan kazandınız!"
                android:id="@+id/textView37"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:layout_below="@+id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_weight="33"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:id="@+id/textView38"
                android:layout_gravity="center_horizontal"
                android:layout_weight="34"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paylaş"
                android:id="@+id/textView39"
                android:layout_gravity="center_horizontal"
                android:layout_weight="33"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/qrExitIB"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/qrdialogexit"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kafeadıTextView"
        android:textSize="32sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#fff"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        style="@style/TempOverlayText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/nullbutton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:layout_alignLeft="@+id/relativeLayout" />

</RelativeLayout>
