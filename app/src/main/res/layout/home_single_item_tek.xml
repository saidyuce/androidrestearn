<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:weightSum="100"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#fff"
        android:id="@+id/itemCV"
        android:layout_weight="50"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/placeholderImageView"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#B3FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/kampanyaözetTextView"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#fff"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-110dp"
            android:padding="12dp"
            android:id="@+id/itemRL">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#FF4FC3F7"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ödültürüTextView"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kafeadıTextView"
                android:layout_below="@+id/ödültürüTextView"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kampanyadetayTextView"
                android:layout_below="@+id/kafeadıTextView"
                android:layout_alignStart="@+id/kafeadıTextView"
                android:layout_marginTop="5dp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:layout_alignLeft="@+id/kafeadıTextView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/kampanyabeğenisayısıTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="#616161"
                android:textSize="10sp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/kafeuzaklığıTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:textColor="#66bb6a"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>