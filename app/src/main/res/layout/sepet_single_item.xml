<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodTextView"
        android:gravity="center_vertical|left"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="Food"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/priceTextView"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceTextView"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="22â‚¬"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/removeImageButton"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/removeImageButton"
        android:src="@drawable/sepeteekle"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/amountTextView"
        android:layout_marginRight="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountTextView"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="4"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/addImageButton"
        android:layout_marginRight="10dp"
        android:textColor="#000000" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/addImageButton"
        android:layout_weight="10"
        android:src="@drawable/sepeteekle"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>